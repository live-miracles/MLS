<!doctype html>
<html lang="en" data-theme="dim">
  <head>
    <meta charset="UTF-8" />
    <title><%= hostname %> Control</title>
    <link rel="icon" type="image/png" href="logo.png" />
    <link rel="stylesheet" type="text/css" href="output.css" />
    <!-- <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" /> -->
    <!-- <script type="text/javascript" src="jsmpeg.min.js"></script> -->
    <!-- <script type="text/javascript" src="jsmpeg.js" defer></script> -->
    <script type="text/javascript" src="tools.js"></script>
    <script type="text/javascript" src="control.js" defer></script>
  </head>
  <body class="bg-base-100 text-base-content">
    <%- include('header') %>

    <section class="mx-6 my-3 text-center">
      <p>
        Distribute - <code>rtmp://<%= publicIp %>/distribute/stream1</code> or <code>stream2</code> or <code>stream3</code> ...
        <br />
        Primary - <code>rtmp://<%= publicIp %>/main/stream1</code><br />
        Backup - <code>rtmp://<%= publicIp %>/backup/stream1</code><br />
        Local (between streams) - <code>rtmp://127.0.0.1/distribute/stream1</code><br />
        Multichannel Main Audio - <code>rtmp://<%= publicIp %>/main/remap1</code> or
        <code>remap2</code>
      </p>
    </section>

    <div class="mx-10 my-3">
      <div class="collapse mx-auto bg-base-200">
        <input id="show-more" type="checkbox" class="url-param" />
        <div class="collapse-title text-center"><b>More</b></div>
        <div class="collapse-content">
          <div class="mx-6 my-3 text-center">
            <p>Multi-Channel Remap</p>
            <form>
              <button type="button" class="btn btn-primary btn-xs" onclick="submitForm(event,'config.php?remap')">on</button>
              <button type="button" class="btn btn-error btn-xs" onclick="submitForm(event,'config.php?remapoff')">off</button>
              <select name="remap_id" class="select select-bordered select-xs max-w-xs">
                <option disabled value="">Remap Id</option>
                <option selected value="remap1">Remap 1</option>
                <option value="remap2">Remap 2</option>
              </select>
              <select name="outputdest" class="select select-bordered select-xs max-w-xs">
                <option disabled value="">Destination</option>
                <option selected value="main">Main</option>
                <option value="backup">Backup</option>
              </select>
              <select name="remap_type" class="select select-bordered select-xs max-w-xs">
                <option disabled value="">Remap Type</option>
                <option selected value="obs">OBS</option>
                <option value="none">None</option>
              </select>
              <input
                type="number"
                name="ch_num"
                placeholder="Ch Number"
                value="16"
                min="1"
                max="16"
                class="input-neutral input input-xs input-bordered mx-1 w-24" />
            </form>
          </div>

          <div class="mx-6 my-3 text-center">
            <p>
              SRT Accept:
              <a href="/config.php?srtaccept" target="_blank" class="btn btn-primary btn-xs">on</a>
              <a href="/config.php?srtacceptoff" target="_blank" class="btn btn-error btn-xs">off</a>
            </p>
          </div>

          <div class="mx-6 my-3 text-center">
            <p>
              Supers - Global Control:
              <a href="/control.php?allsuper1on" target="_blank" class="btn btn-primary btn-xs">Add 1</a>
              <a href="/control.php?allsuper2on" target="_blank" class="btn btn-primary btn-xs">Add 2</a>
              <a href="/control.php?allsuper3on" target="_blank" class="btn btn-primary btn-xs">Add 3</a>
              <a href="/control.php?allsuper4on" target="_blank" class="btn btn-primary btn-xs">Add 4</a>
              <a href="/control.php?allsuper5on" target="_blank" class="btn btn-primary btn-xs">Add 5</a>
              <a href="/control.php?allsuper6on" target="_blank" class="btn btn-primary btn-xs">Add 6</a>
              <a href="/control.php?allsuper7on" target="_blank" class="btn btn-primary btn-xs">Add 7</a>
              <a href="/control.php?allsuper8on" target="_blank" class="btn btn-primary btn-xs">Add 8</a>
              <a href="/control.php?allsuperoff" target="_blank" class="btn btn-error btn-xs">Remove</a>
            </p>
          </div>

          <div class="mx-6 my-3 text-center">
            Batch Input Control: &nbsp;

            <select id="inputType" class="labeled-select">
              <option value="" disabled>Input Type</option>
              <option value="main" selected>Main</option>
              <option value="back">Backup</option>
              <option value="video">Video</option>
              <option value="holding">Holding</option>
            </select>

            <input type="text" id="batchInputControl" placeholder="Stream IDs: 3 4 5 7" class="input input-xs input-bordered w-[30rem]" />

            <button class="btn btn-primary btn-xs" onclick="batchInputControlClick(true);">on</button>
            <button class="btn btn-error btn-xs" onclick="batchInputControlClick(false);">off</button>
          </div>

          <div class="mx-6 my-3 text-center">
            Refresh Time (seconds):
            <input type="number" min="1" id="refreshTime" value="5" class="input input-xs input-bordered w-16" />
            <button class="btn btn-primary btn-xs" onclick="updateRefreshTime();">Update</button>

            <button class="btn btn-outline btn-xs ml-3" onclick="rerender();">Refresh Now</button>
          </div>
        </div>
      </div>
    </div>

    <div class="divider"></div>

    <section id="stream-controls" class="text-center">
      <% for(let i = 1; i <= STREAM_NUM; i++) { %>
      <div id="stream-container<%= i %>" class="inline-block max-w-[400px] m-2 rounded-box bg-base-300 text-left p-2">
        <div id="streamHeader<%= i %>" class="text-xl"></div>
        {getJsmpegPlayerHtml(i)}
        <div id="stream-outs-<%= i %>"></div>
        <div class="collapse collapse-arrow bg-base-200 mt-2">
          <input type="checkbox" />
          <div class="collapse-title text-xl font-medium">More</div>
          <div class="collapse-content">
            <div class="my-1">
              <div class="badge badge-xs badge-outline" id="recording-status<%= i %>"></div>
              <button class="btn btn-xs btn-primary" onclick="executePhp('/control.php?streamno=<%= i %>&action=out&actnumber=98&state=on')">
                on
              </button>
              <button class="btn btn-xs btn-error" onclick="executePhp('/control.php?streamno=<%= i %>&action=out&actnumber=98&state=off')">
                off
              </button>
              Record
            </div>

            <div class="mt-3 font-bold">Choose Input:</div>
            <div class="my-1">
              <span class="badge badge-xs badge-outline" id="main-status<%= i %>"></span>
              <button onclick="executePhp('/control.php?streamno=<%= i %>&action=main&actnumber=&state=turnon')" class="btn btn-xs btn-primary">
                on
              </button>
              Main Live Stream
            </div>
            <div class="my-1">
              <span class="badge badge-xs badge-outline" id="backup-status<%= i %>"></span>
              <button onclick="executePhp('/control.php?streamno=<%= i %>&action=back&actnumber=&state=turnon')" class="btn btn-xs btn-primary">
                on
              </button>
              Backup Live stream
            </div>

            <form class="my-1">
              <span class="badge badge-xs badge-outline" id="video-status<%= i %>"></span>
              <button
                type="button"
                class="btn btn-xs btn-primary"
                style="display: inline"
                onclick="submitForm(event,'control.php?streamno=<%= i %>&action=video&actnumber=&state=turnon');">
                on
              </button>
              Local
              <select name="video_no" class="select select-bordered select-xs max-w-xs">
                <option selected value="video">Video</option>
              </select>
              <input type="text" name="startmin" size="1" value="0" class="input input-bordered input-neutral input-xs w-9" />m
              <input
                type="text"
                style="display: inline"
                name="startsec"
                size="1"
                value="0"
                class="input input-bordered input-neutral input-xs w-10" />s
            </form>

            <form class="my-1">
              <span class="badge badge-xs badge-outline" id="holding-status<%= i %>"></span>
              <button
                type="button"
                class="btn btn-xs btn-primary"
                style="display: inline"
                onclick="submitForm(event,'control.php?streamno=<%= i %>&action=video&actnumber=&state=turnon');">
                on
              </button>
              Local
              <select name="video_no" class="select select-bordered select-xs max-w-xs">
                <option selected value="holding">Holding</option>
              </select>
              <input type="text" name="startmin" size="1" value="0" class="input input-bordered input-neutral input-xs w-9" />m
              <input
                type="text"
                style="display: inline"
                name="startsec"
                size="1"
                value="0"
                class="input input-bordered input-neutral input-xs w-10" />s
            </form>

            <div class="my-1">
              <button onclick="executePhp('/control.php?streamno=<%= i %>&action=playlist&actnumber=&state=')" class="btn btn-xs btn-primary ml-4">
                on
              </button>
              Playlist
            </div>

            <div>
              <button onclick="executePhp('/control.php?streamno=<%= i %>&action=off&actnumber=&state=')" class="btn btn-xs btn-error">off</button>
              Current Input
            </div>

            <div class="my-1 mt-3">
              <b>Overlays:</b>
              <a href="/control.php?streamno=<%= i %>&action=super&actnumber=1&state=" target="_blank" class="btn btn-xs btn-primary">Add 1</a>
              <a href="/control.php?streamno=<%= i %>&action=super&actnumber=2&state=" target="_blank" class="btn btn-xs btn-primary">Add 2</a>
              <a href="/control.php?streamno=<%= i %>&action=super&actnumber=3&state=" target="_blank" class="btn btn-xs btn-primary">Add 3</a>
              <a href="/control.php?streamno=<%= i %>&action=super&actnumber=4&state=" target="_blank" class="btn btn-xs btn-primary">Add 4</a>
              <br />
              <a href="/control.php?streamno=<%= i %>&action=super&actnumber=5&state=" target="_blank" class="btn btn-xs btn-primary">Add 5</a>
              <a href="/control.php?streamno=<%= i %>&action=super&actnumber=6&state=" target="_blank" class="btn btn-xs btn-primary">Add 6</a>
              <a href="/control.php?streamno=<%= i %>&action=super&actnumber=7&state=" target="_blank" class="btn btn-xs btn-primary">Add 7</a>
              <a href="/control.php?streamno=<%= i %>&action=super&actnumber=8&state=" target="_blank" class="btn btn-xs btn-primary">Add 8</a>
              <a href="/control.php?streamno=<%= i %>&action=super&actnumber=off&state=" target="_blank" class="btn btn-xs btn-error">Remove</a>
            </div>

            <form method="post" target="_blank" action="/control.php?streamno=<%= i %>&action=volume&actnumber=&state=volume">
              <p>
                <span class="font-bold">Volume:</span>
                <input type="text" name="vol_level" size="5" placeholder="1" class="input input-bordered input-neutral input-xs max-w-xs" />
                <input type="submit" value="Change" class="btn btn-xs btn-outline" />
              </p>
            </form>
          </div>
        </div>
      </div>
      <% } %>
    </section>

    <%- include('footer') %>
  </body>
</html>
